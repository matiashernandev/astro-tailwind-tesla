---
const { color, title, subtitle, id, isMoves, notUnderline } = Astro.props;
const textColor = `text-${color}`;
---

<section
  class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative"
  data-header-color={color}
  id={id}
>
  <div class="z-30 relative h-full flex flex-col">
    <header>
      <h2 class={`${textColor} pt-[107px] text-[40px] font-medium`}>
        {title}
      </h2>
      <a
        href="#"
        class={`${textColor} text-sm ${
          notUnderline || "underline underline-offset-4"
        }`}
      >
        {subtitle}
      </a>
    </header>

    <footer class="flex flex-col flex-grow justify-end pb-20">
      <slot name="footer" />
      {
        isMoves && (
          <a
            href="#"
            class="underline underline-offset-4  text-xs leading-[18px] absolute bottom-4 self-center "
          >
            Disponible con Moves III
          </a>
        )
      }
    </footer>
  </div>

  <div class="absolute top-0 bottom-0 h-full w-full z-10">
    <slot name="background" />
  </div>
</section>
